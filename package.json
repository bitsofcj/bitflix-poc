{
  "name": "BITFLIX",
  "version": "0.1.0",
  "description": "BITFLIX | Movie Search App",
  "keywords": [
    "bitflix",
    "movies",
    "react",
    "rxjs",
    "styled-components",
    "mock-service-worker",
    "storybook",
    "typescript",
    "create-react-app"
  ],
  "private": true,
  "engines": {
    "node": ">= 16.0 <18.0.0"
  },
  "scripts": {
    "start:dev": "craco start",
    "start": "npm run build && node server.mjs",
    "build": "craco build",
    "test": "craco test --watchAll=false",
    "test:watch": "craco test",
    "test:coverage": "craco test --coverage --watchAll=false",
    "test:server": "NODE_OPTIONS=--experimental-vm-modules jest server.test.js",
    "lint": "npx eslint \"src/**/*.{js,jsx,ts,tsx,html}\" --quiet --fix",
    "eject": "react-scripts eject",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "postinstall": "mkdir -p node_modules/babel-preset-react-app/node_modules/@babel && ln -sf ../../../@babel/runtime node_modules/babel-preset-react-app/node_modules/@babel/runtime 2>/dev/null || true"
  },
  "eslintConfig": {
    "extends": [
      "react-app/jest",
      "plugin:react-hooks/recommended"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "react-hooks/exhaustive-deps": [
        "warn",
        {}
      ]
    },
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@apollo/client": "^3.14.0",
    "@babel/runtime": "^7.28.4",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "express-rate-limit": "^8.1.0",
    "graphql": "^16.11.0",
    "lucide-react": "^0.546.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.4.3",
    "react-rxjs-elements": "^0.0.7",
    "react-scripts": "5.0.1",
    "rxjs": "^7.5.7",
    "styled-components": "^5.3.6",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.15",
    "tailwindcss-animate": "^1.0.7",
    "web-vitals": "2.1.4"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@craco/craco": "^7.0.0",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/react-webpack5": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.2.2",
    "@types/node": "16.11.26",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "@types/styled-components": "^5.1.26",
    "@types/supertest": "^6.0.3",
    "babel-loader": "^10.0.0",
    "dotenv": "^17.2.3",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest-fetch-mock": "^3.0.3",
    "msw": "^0.48.0",
    "msw-storybook-addon": "^1.6.3",
    "prettier": "^2.7.1",
    "storybook": "^8.6.14",
    "supertest": "^7.1.4",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0"
  },
  "msw": {
    "workerDirectory": "public"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/index.tsx",
      "!src/reportWebVitals.ts",
      "!src/**/*.stories.tsx"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  }
}
